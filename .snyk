# Snyk (https://snyk.io) policy file
version: v1.25.0

# Ignore specific vulnerabilities
ignore: {}

# Patches to apply
patch: {}

# Language settings
language-settings:
  javascript:
    enableLinters: true
    
# Severity threshold
severity-threshold: medium

# Fail on issues
fail-on: upgradable

# Monitor project
monitor: true

# Test settings
test:
  depth: 10
  dev: false
  
# Exclude files from scanning
exclude:
  - dist/**
  - coverage/**
  - tests/**
  - "*.test.ts"
  - "*.spec.ts"